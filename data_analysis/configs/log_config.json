{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "WARNING",
      "formatter": "simple",
      "filename": "get_trends_data.log",
      "mode": "a",
      "encoding": "utf-8"
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file"]
  }
}
